<html>
    <head>
        <title>Liège</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">   
        <link rel="stylesheet" href="{{asset('bundles/eitouristic/css/output.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{asset( 'bundles/eitouristic/libs/bootstrapv3/css/bootstrap.min.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{asset('bundles/eitouristic/libs/font-awesome/css/font-awesome.min.css') }}" type="text/css" />
        {% stylesheets '@FOSCommentBundle/Resources/public/css/comments.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        <!--<link rel="stylesheet" href="{{asset('FOSCommentBundle/Resources/assets/css/comments.css') }}" type="text/css" />-->
       {# {% stylesheets 
            'bundles/eitouristic/css/output.css'
