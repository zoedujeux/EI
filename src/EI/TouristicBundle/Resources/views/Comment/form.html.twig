{% extends "EITouristicBundle::layout.html.twig" %}

{% block contentPage %}

<div class="well">   
    {{ form_start(form, {'attr': {'id': 'contactForm'}}) }}

      {# Les erreurs générales du formulaire. #}
      {{ form_errors(form) }}

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {#{{ form_label(form.user, "Votre nom *", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.user) }}
                    {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mail, "Votre mail ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.mail) }}
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}#}
                </div>                                 
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.comment, "Votre commentaire *", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.comment) }}
                    {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
        {{ form_rest(form) }}

      {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
    
</div>

{% endblock %}